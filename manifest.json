{
  "manifest_version": 3,
  "name": "Twitch Chat Overlay",
  "version": "1.0.0",
  "description": "Twitchのチャットをオーバーレイ表示する拡張機能",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["inject-minimal.js", "cleanup-script.js"],
      "matches": ["https://www.twitch.tv/*"]
    }
  ]
}